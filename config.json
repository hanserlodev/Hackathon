{
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": true
  },
  "nasa_api": {
    "base_url": "https://api.nasa.gov/neo/rest/v1",
    "api_key": "DEMO_KEY",
    "timeout": 10
  },
  "geocoding": {
    "provider": "nominatim",
    "base_url": "https://nominatim.openstreetmap.org/search",
    "timeout": 10
  },
  "simulation": {
    "default_diameter": 100,
    "default_velocity": 20,
    "default_density": "stone",
    "animation_speed": 1.0,
    "max_simulation_time": 30
  },
  "visualization": {
    "earth_radius": 2,
    "meteor_trail_length": 20,
    "particle_count": 100,
    "shock_wave_count": 5
  },
  "mitigation": {
    "kinetic_effectiveness": 0.8,
    "gravity_effectiveness": 0.6,
    "laser_effectiveness": 0.4,
    "shelter_effectiveness": 0.9
  },
  "ui": {
    "theme": "dark",
    "language": "es",
    "show_welcome_message": true,
    "auto_update_interval": 1800000
  }
}
